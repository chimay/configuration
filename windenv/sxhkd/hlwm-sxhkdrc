	dunstctl context

# clock {{{1

# toggle active / pause
hyper + o ; space
	pkill -12 -f clock.zsh

# agenda {{{1

hyper + a ; r
	pkill -10 -f remind-server.zsh

# network {{{1

hyper + shift + w
	toggle-wifi.zsh

# cpus {{{1

hyper + c ; s
	notify-send "$(cpupower-gui profile save | head -n 1)"

hyper + c ; d
	notify-send "$(cpupower-gui profile demand | head -n 1)"

# screen {{{1

# wallpaper {{{2

# info, log
hyper + w ; i
	less-log.sh ~/log/wallpaper.log
hyper + w ; l
	less-log.sh ~/log/wallpaper.log

# evaluation
hyper + w ; e
	eval-wallpaper.zsh

# reload images list
hyper + w ; r
	pkill -10 -f wallpaper.zsh

# next image
hyper + w ; n
	pkill -12 -f wallpaper.zsh

# stop waiting
hyper + o ; s
	pkill -10 -f clock.zsh

# transparence {{{2

# diaphane

hyper + d ; Up
	transset-df --inc 0.1

hyper + d ; Down
	transset-df --dec 0.1

# luminosity {{{2

XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

hyper + s ; 0
	xbacklight -set 100

hyper + s ; Up
	xbacklight -inc 10

hyper + s ; Down
	xbacklight -dec 10

hyper + s ; Right
	xbacklight -inc 25

hyper + s ; Left
	xbacklight -dec 25

# sleep {{{2

hyper + s ; minus
	xset s off ; xset -dpms ; notify-send "$(xset -q | grep 'Screen Saver:\|timeout\|DPMS')"

hyper + s ; equal
	xset s on ; xset +dpms ; xset dpms 0 0 300 ; notify-send "$(xset -q | grep 'Screen Saver:\|timeout\|DPMS')"

hyper + s ; KP_Subtract
	xset s off ; xset -dpms ; notify-send "$(xset -q | grep 'Screen Saver:\|timeout\|DPMS')"

hyper + s ; plus
	xset s on ; xset +dpms ; xset dpms 0 0 300 ; notify-send "$(xset -q | grep 'Screen Saver:\|timeout\|DPMS')"

hyper + shift + @z
	sleep 1 ; xset dpms force off

