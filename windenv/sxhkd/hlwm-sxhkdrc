# launcher {{{1

hyper + colon
	rofi-meta.zsh

hyper + equal
	rofi-fenetres.zsh

hyper + semicolon
	dmenu-apps.sh

super + colon
	zshrun.sh

hyper + comma
	zshrunterm.sh

hyper + ccedilla
	rofi-clipmenu.zsh
	#rofi-greenclip.zsh

hyper + agrave
	urxvtc -name fzf-nova -e ~/racine/infoman/unix/generic/gotbletu/fzf-nova/fzf-nova

