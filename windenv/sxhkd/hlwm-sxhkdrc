	eval-song.zsh

hyper + space ; Up
	pamixer --increase 5

hyper + space ; Down
	pamixer --decrease 5

hyper + space ; Right
	pamixer --increase 10

hyper + space ; Left
	pamixer --decrease 10

hyper + space ; Prior
	pamixer --increase 10

hyper + space ; Next
	pamixer --decrease 10

hyper + space ; space
	mpc toggle

hyper + space ; n
	mpc next

hyper + space ; p
	mpc prev

hyper + space ; BackSpace
	mpc -q seek 0:0

hyper + space ; f
	mpc seek +1:00

hyper + space ; b
	mpc seek -1:00

