#  Courriel {{{2

typeset -U mailpath

repertoires=(\
	~/racine/mail/Systeme/Reception \
	~/racine/mail/Themes/Finance/*(.) \
	/var/spool/mail/$USER \
)

for boite in $repertoires
do
	mailpath[$#mailpath+1]="${boite}?Nouveau courrier dans ${boite:t:r}."
done

export MAIL=/var/spool/mail/$USER

export MAILCHECK=36

