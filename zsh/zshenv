#  {{{ Courriel
# ------------------------------------------------------------------------

typeset -U mailpath

repertoires=(\
	/var/spool/mail/USER \
)

for boite in $repertoires
do
	mailpath[$#mailpath+1]="${boite}?Nouveau courrier dans ${boite:t:r}."
done

export MAIL=/var/spool/mail/$USER

export MAILCHECK=36

export VMAIL_BROWSER='elinks'
export VMAIL_HTML_PART_READER='elinks -dump'

