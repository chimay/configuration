# {{{ Système d’exploitation

case $(uname -a) in

	*Linux*ARCH*)
		OPERASYS=archlinux
		;;
	*FreeBSD*)
		OPERASYS=freebsd
		;;
	*Linux*|*linux*)
		OPERASYS=linux
		;;
	?*)
		OPERASYS=inconnu
		;;
esac

if [ -f /etc/arch-release ]
then
	OPERASYS=archlinux
fi

export OPERASYS

# }}}

