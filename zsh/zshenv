# vim: set ft=zsh :

setopt nullglob

# Système d’exploitation {{{1

case $(uname -a) in

	*Linux*ARCH*)
		OPERASYS=archlinux
		;;
	*FreeBSD*)
		OPERASYS=freebsd
		;;
	*Linux*|*linux*)
		OPERASYS=linux
		;;
	?*)
		OPERASYS=inconnu
		;;
esac

if [ -f /etc/arch-release ]
then
	OPERASYS=archlinux
fi

export OPERASYS

# }}}1

#  Type de terminal {{{1

# Nécessaire pour une bonne gestion des couleurs dans tmux, mutt

case "$TERM" in

	linux*) TERM=linux;;

	xterm*) TERM=xterm-256color;;

	tmux*) TERM=tmux-256color;;

	screen*) TERM=screen-256color;;
esac

export TERM

# }}}1

