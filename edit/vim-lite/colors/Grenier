" Palette {{{

let s:palette = {}

" The most basic of all our colors is a slightly tweaked version of the Molokai
" Normal text.
let s:palette.plain = ['f8f6f2', 15]

" Pure and simple.
let s:palette.snow = ['ffffff', 15]
let s:palette.coal = ['000000', 16]

" All of the Gravel colors are based on a brown from Clouds Midnight.
let s:palette.brightgravel   = ['d9cec3', 252]
let s:palette.lightgravel    = ['998f84', 245]
let s:palette.gravel         = ['857f78', 243]
let s:palette.mediumgravel   = ['666462', 241]
let s:palette.deepgravel     = ['45413b', 238]
let s:palette.deepergravel   = ['35322d', 236]
let s:palette.darkgravel     = ['242321', 235]
let s:palette.blackgravel    = ['1c1b1a', 233]
let s:palette.blackestgravel = ['141413', 232]

" A color sampled from a highlight in a photo of a glass of Dale's Pale Ale on
" my desk.
let s:palette.dalespale = ['fade3e', 221]

" A beautiful tan from Tomorrow Night.
let s:palette.dirtyblonde = ['f4cf86', 222]

" Delicious, chewy red from Made of Code for the poppiest highlights.
let s:palette.taffy = ['ff2c4b', 196]

" Another chewy accent, but use sparingly!
let s:palette.saltwatertaffy = ['8cffba', 121]

" The star of the show comes straight from Made of Code.
let s:palette.tardis = ['0a9dff', 39]

" This one's from Mustang, not Florida!
let s:palette.orange = ['ffa724', 214]

" A limier green from Getafe.
let s:palette.lime = ['aeee00', 154]

" Rose's dress in The Idiot's Lantern.
let s:palette.dress = ['ff9eb8', 211]

" Another play on the brown from Clouds Midnight.  I love that color.
let s:palette.toffee = ['b88853', 137]

" Also based on that Clouds Midnight brown.
let s:palette.coffee    = ['c7915b', 173]
let s:palette.darkroast = ['88633f', 95]

" }}}

" {{{ Highlighting Function

function! s:colore(group, fg, ...)
    " Arguments: group, guifg, guibg, gui, guisp

    let histring = 'hi ' . a:group . ' '

    if strlen(a:fg)
        if a:fg == 'fg'
            let histring .= 'guifg=fg ctermfg=fg '
        else
            let c = get(s:palette, a:fg)
            let histring .= 'guifg=#' . c[0] . ' ctermfg=' . c[1] . ' '
        endif
    endif

    if a:0 >= 1 && strlen(a:1)
        if a:1 == 'bg'
            let histring .= 'guibg=bg ctermbg=bg '
        else
            let c = get(s:palette, a:1)
            let histring .= 'guibg=#' . c[0] . ' ctermbg=' . c[1] . ' '
        endif
    endif

    if a:0 >= 2 && strlen(a:2)
        let histring .= 'gui=' . a:2 . ' cterm=' . a:2 . ' '
    endif

    if a:0 >= 3 && strlen(a:3)
        let c = get(s:palette, a:3)
        let histring .= 'guisp=#' . c[0] . ' '
    endif

    " echom histring

    execute histring
endfunction

" }}}

" Pris en charge par vim-airline

" Multiple cursors {{{3

highlight multiple_cursors_cursor term=reverse cterm=reverse

