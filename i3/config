# Système {{{2

bindsym ampersand exec yakuake ; mode "default"
bindsym dollar exec xterm -e zsh -l ; mode "default"
bindsym asterisk exec urxvtc -e zsh -l ; mode "default"
bindsym Shift+sterling exec tilix ; mode "default"
bindsym equal exec tilix -q -e zsh -l ; mode "default"

