# }}}1

# Mode scratchpad {{{1

# Visibilité indépendante des workspaces

bindsym Mod4+F11 mode "scratchpad"

mode "scratchpad" {

bindsym o move scratchpad
bindsym p scratchpad show

# Lancement des outils

bindsym Shift+D exec --no-startup-id urxvtc -name deroulant -geometry 70x20 -e zsh -l
bindsym Shift+C exec --no-startup-id urxvtc -name calculatrice -geometry 70x20 -fn "xft:monospace:size=12" -e calc

# Affichage des outils

bindsym d [instance="deroulant"] scratchpad show ; \
	[instance="deroulant"] move position center ; \
	[instance="deroulant"] move up 100 ; \
	mode "default"

bindsym c [instance="calculatrice"] scratchpad show ; \
	[instance="calculatrice"] move position center ; \
	[instance="calculatrice"] move up 100 ; \
	mode "default"

# Back to normal {{{2

bindsym q mode "default"
bindsym Return mode "default"
bindsym KP_Enter mode "default"
bindsym Escape mode "default"

# }}}2

}

# }}}1

# Mode multimedia {{{1

bindsym Mod4+F9 mode "multimedia"

mode "multimedia" {

# Mixer {{{2

bindsym M       exec urxvtc -e pulsemixer ; mode "default"
bindsym Shift+M exec urxvtc -e alsamixer -c 0 ; mode "default"
bindsym Mod1+M  exec pavucontrol ; mode "default"

bindsym Up exec --no-startup-id amixer -c 0 -- set Master 2dB+
bindsym Down exec --no-startup-id amixer -c 0 -- set Master 2dB-
bindsym Prior exec --no-startup-id amixer -c 0 -- set Master 4dB+
bindsym Next  exec --no-startup-id amixer -c 0 -- set Master 4dB-
bindsym Home  exec --no-startup-id amixer -c 0 -- set Master 7dB+
bindsym End   exec --no-startup-id amixer -c 0 -- set Master 7dB-

bindsym F10      exec --no-startup-id pamixer --increase 5
bindsym F11      exec --no-startup-id pamixer --decrease 5
bindsym Mod4+F10 exec --no-startup-id pamixer --increase 10
bindsym Mod4+F11 exec --no-startup-id pamixer --decrease 10

# }}}2

# MPC {{{2

bindsym F9        exec --no-startup-id mpc --no-status toggle ; mode "default"

bindsym space     exec --no-startup-id mpc --no-status toggle

bindsym BackSpace exec --no-startup-id mpc --no-status seek 0:0

bindsym n         exec --no-startup-id mpc next
bindsym p         exec --no-startup-id mpc prev

bindsym f   exec --no-startup-id mpc seek +1:00
bindsym b   exec --no-startup-id mpc seek -1:00

# }}}2

# CMUS {{{2

bindsym Mod4+F9        exec --no-startup-id cmus-remote -C player-pause ; mode "default"

bindsym Mod4+space     exec --no-startup-id cmus-remote -C player-pause

bindsym Mod4+BackSpace exec --no-startup-id cmus-remote -C 'seek 0'

bindsym Mod4+n         exec --no-startup-id cmus-remote -C player-next
bindsym Mod4+p         exec --no-startup-id cmus-remote -C player-prev

# }}}2

# Back to normal {{{2

bindsym q mode "default"
bindsym Return mode "default"
bindsym KP_Enter mode "default"
bindsym Escape mode "default"

# }}}2

}

# }}}1

# Souris {{{1

focus_follows_mouse no

