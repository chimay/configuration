#!/bin/zsh

setopt nullglob

# Système d’exploitation {{{1

OPERASYS=inconnu

if which lsb_release >& /dev/null
then
	case $(lsb_release -d) in
		*Arch*Linux*)
			OPERASYS=arch
			;;
		*Manjaro*Linux*)
			OPERASYS=manjaro
			;;
		*Ubuntu*)
			OPERASYS=ubuntu
			;;
		*Linux*Mint*)
			OPERASYS=mint
			;;
		*Linux*|*linux*)
			OPERASYS=linux
			;;
	esac
else
	case $(uname -a) in
		*FreeBSD*)
			OPERASYS=freebsd
			;;
	esac
fi

export OPERASYS

#  Type de terminal {{{1

# Nécessaire pour une bonne gestion des couleurs dans tmux, mutt

case "$TERM" in
	linux*) TERM=linux;;
	xterm*) TERM=xterm-256color;;
	tmux*) TERM=tmux-256color;;
	screen*) TERM=screen-256color;;
esac

export TERM

# Pour i3
# Prendre un terminal qui supporte les bonnes options pour visualiser le
# journal d’erreur

export TERMINAL=xterm

#  Self (zsh configure zsh) {{{1

export RACINE_ZSH=~/racine/config/shell/zsh

export SHELL=zsh

export ZDOTDIR=$HOME

export WORDCHARS="*?_-.[]~=&;!#$%^(){}<>"

# Default command with redir
export NULLCMD=cat
export READNULLCMD=less

export PROMPT RPROMPT

#  Historique {{{2

export HISTFILE=~/racine/hist/zsh/$HOST
export SAVEHIST=60000
export HISTSIZE=$SAVEHIST
export HISTFILESIZE=$HISTSIZE

