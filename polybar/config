[module/menu-apps]
type = custom/menu

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"

; Optional item separator
; Default: none
label-open = "    Menu    "
label-separator = "  |  "
label-close = " <--|-- "

menu-0-0 = Launch
menu-0-0-exec = menu-open-1
menu-0-1 = Term
menu-0-1-exec = menu-open-2
menu-0-2 = Text
menu-0-2-exec = menu-open-3
menu-0-3 = Browser
menu-0-3-exec = menu-open-4

menu-1-0 = Rofi
menu-1-0-exec = rofi-meta.zsh &
menu-1-1 = Dmenu
menu-1-1-exec = dmenu-apps.sh &
menu-1-2 = "<--"
menu-1-2-exec = menu-open-0

menu-2-0 = Kitty
menu-2-0-exec = kitty &
menu-2-1 = Xterm
menu-2-1-exec = xterm &
menu-2-2 = Urxvtc
menu-2-2-exec = urxvtc &
menu-2-3 = Kakoune
menu-2-3-exec = kitty kak &
menu-2-4 = Vifm
menu-2-4-exec = kitty vifmrun &
menu-2-5 = "<--"
menu-2-5-exec = menu-open-0

menu-3-0 = Neovim
menu-3-0-exec = lance-neovim.zsh &
menu-3-1 = Gvim
menu-3-1-exec = lance-gvim.zsh &
menu-3-2 = Emacs client
menu-3-2-exec = lance-emacs-client.zsh &
menu-3-3 = "<--"
menu-3-3-exec = menu-open-0

menu-4-0 = Qutebrowser
menu-4-0-exec = qutebrowser &
menu-4-1 = Firefox
menu-4-1-exec = firefox &
menu-4-2 = Brave
menu-4-2-exec = brave &
menu-4-3 = "<--"
menu-4-3-exec = menu-open-0

; Available tags:
;   <label-toggle> (default) - gets replaced with <label-(open|close)>
;   <menu> (default)
; Note that if you use <label-toggle> you must also include
; the definition for <label-open>
;format = <label-toggle> <menu>

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = "    Quitter    "
label-separator = "  |  "
label-close = " <-|- "

;label-open = 
;label-open-foreground = ${colors.secondary}
;label-close =  Annuler
;label-close-foreground = ${colors.secondary}
;label-separator = |
;label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = Fenêtre
menu-0-0-exec = rofi-fermer.zsh
menu-0-1 = Session
menu-0-1-exec = rofi-deconnexion.zsh
menu-0-2 = Ordinateur
menu-0-2-exec = rofi-eteindre.zsh

[module/bspwm]
