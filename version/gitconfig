# }}}

# {{{ Diff

[diff]

tool = vimdiff

[diff "image"]

command = exiv2 pr

[diff "word"]

command = antiword

[diff "zip"]

textconv = unzip -c -a

# }}}

# {{{ Merge

[merge]

tool=vimdiff
conflictstyle=diff3

[mergetool]

prompt=false

# }}}

# {{{ Rerere

[rerere]

enabled=true

# }}}

# {{{ Repack

[repack]

