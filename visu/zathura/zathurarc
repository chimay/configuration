# vim: set filetype=conf:

# Options {{{1

set font "monospace normal 11"

set guioptions cs

set n-completion-items 15

set incremental-search true

set show-scrollbars false

set window-height 700
set window-width 1200

set adjust-open best-fit

set window-title-basename true

set zoom-step 20
set scroll-step 80

set selection-clipboard clipboard

# }}}1

# Maps {{{1

map <PageUp> navigate previous
map <PageDown> navigate next

map <Space> navigate next
map b navigate previous

map + zoom in
map - zoom out
 
map q quit
map ZZ quit

map [normal] a focus_inputbar ":bmark "
map [normal] l jumplist backward
map [normal] L jumplist forward

map <C-1> feedkeys ":set pages-per-row 1"<Return>
map <C-2> feedkeys ":set pages-per-row 2"<Return>
map <C-3> feedkeys ":set pages-per-row 3"<Return>
map <C-4> feedkeys ":set pages-per-row 4"<Return>

# }}}1

# Thème {{{1

set default-fg "#5b3c11"
set default-bg "black"

set inputbar-fg "#5b3c11"
set inputbar-bg "black"

set statusbar-fg "#5b3c11"
set statusbar-bg "black"

set completion-fg "#5b3c11"
set completion-bg "black"

set tabbar-fg "#5b3c11"
set tabbar-bg "black"

set tabbar-focus-fg "black"
set tabbar-focus-bg "#5b3c11"

set completion-highlight-fg "black"
set completion-highlight-bg "#5b3c11"

set notification-fg "#5b3c11"
set notification-bg "black"

set notification-warning-fg "green"
set notification-warning-bg "black"

set notification-error-fg "red"
set notification-error-bg "black"

set render-loading-fg "#5b3c11"
set render-loading-bg "black"

set index-fg "#5b3c11"
set index-bg "black"

set index-active-fg "black"
set index-active-bg "#5b3c11"

# set recolor true
# set recolor-keephue true
# set recolor-reverse-video true
# set recolor-lightcolor "#5b3c11"
# set recolor-darkcolor "black"

# }}}1
