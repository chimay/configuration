# readability {{{2

keymap C-r COMMAND "READ_SHELL 'python3 -m readability.readability -u $W3M_URL 2>/dev/null 1>~/racine/varia/cache/readable/last.html' ; BACK ; NEW_TAB ; LOAD ~/racine/varia/cache/readable/last.html"
keymap rr  COMMAND "SHELL 'readable $W3M_URL > ~/racine/varia/cache/readable/last.html' ; NEW_TAB ; LOAD ~/racine/varia/cache/readable/last.html"

# text to speech {{{2

keymap ap   COMMAND "PRINT /tmp/picospeaker.txt ; SHELL 'picospeaker -l en-US < /tmp/picospeaker.txt 2>/dev/null &'"
keymap aP   COMMAND "PRINT /tmp/picospeaker.txt ; SHELL 'picospeaker -l fr-FR < /tmp/picospeaker.txt 2>/dev/null &'"
keymap at   COMMAND "SHELL '~/racine/shell/process/toggle-process.zsh /usr/bin/play'"
keymap as   COMMAND "SHELL 'pkill play'"
