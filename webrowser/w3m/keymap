# vim: filetype=conf:expandtab:

# help {{{2

keymap  hh  HELP
keymap  hu  COMMAND  "HELP; SEARCH ^User-Defined; CENTER_V"            # show user custom hotkeys binding
keymap  hi  COMMAND  "HELP; SEARCH ^Input Line Editing Mode; CENTER_V" # show field hotkeys binding
keymap  hm  TAB_GOTO file:///usr/share/doc/w3m/MANUAL.html
keymap  hf  TAB_GOTO file:///usr/share/doc/w3m/README.func
keymap  hk  TAB_GOTO file:///usr/share/doc/w3m/README.keymap
keymap  hM  TAB_GOTO file:///usr/share/doc/w3m/README.mouse
keymap  hM-m  COMMAND  "SHELL 'man w3m'"

# info {{{1

keymap  ii  INFO
keymap  M-i INFO
keymap  il  LINE_INFO
keymap  C-g LINE_INFO
keymap  iu  PEEK
keymap  iU  PEEK_LINK

# quit {{{1

# ---- quit with confirmation

#keymap  q   QUIT

# ---- quit at once

#keymap  q   ABORT

# ---- save session and quit

keymap q COMMAND "READ_SHELL 'rm ~/.w3m/session 2>/dev/null' ; BACK ; STORE ; ABORT"

# execute a w3m command {{{1

keymap : COMMAND
keymap ";" COMMAND "READ_SHELL ~/.w3m/cgi-bin/fnx_fzfmiru.cgi ; BACK ; GOTO file:/cgi-bin/fnx_execute.cgi ; BACK"

# menu {{{1

# pop-up
# also mouse right click

keymap  M-m     MENU
#keymap  C-j     MENU

# reload config files {{{1

keymap rc   COMMAND "LOAD ~/.w3m/config ; EDIT ; BACK ; REINIT ; MESSAGE 'config reloaded'"
keymap rk   COMMAND "LOAD ~/.w3m/keymap ; EDIT ; BACK ; REINIT ; MESSAGE 'keymap reloaded'"
keymap rs   COMMAND "LOAD ~/.w3m/siteconf ; EDIT ; BACK ; REINIT ; MESSAGE 'siteconf reloaded'"
keymap r=   COMMAND "LOAD ~/.w3m/menu ; EDIT ; BACK ; REINIT ; MESSAGE 'menu reloaded'"
keymap rm   COMMAND "LOAD ~/.w3m/mailcap ; EDIT ; BACK ; REINIT ; MESSAGE 'mailcap reloaded'"
keymap rt   COMMAND "LOAD ~/.w3m/mime.types ; EDIT ; BACK ; REINIT ; MESSAGE 'mime.types reloaded'"

# configure options {{{1

keymap  co  OPTIONS
keymap  cO  SET_OPTION

keymap cn   COMMAND 'SET_OPTION "show_lnum = toggle" ; RESHAPE'
keymap cl   COMMAND 'SET_OPTION "display_link_number = toggle" ; RESHAPE'
keymap cc   COMMAND 'SET_OPTION "color = toggle" ; RESHAPE'
keymap ci   COMMAND 'SET_OPTION "display_image = toggle" ; RELOAD'
keymap cb   COMMAND "SET_OPTION display_borders=toggle ; RESHAPE"

# Treat URL-like strings as links in all pages (convert text to url)

keymap cu   COMMAND "SET_OPTION mark_all_pages=toggle ; RELOAD"

