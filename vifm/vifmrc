set vifminfo=
			\bmarks,
			\bookmarks,
			\cs,
			\chistory,
			\dhistory,
			\dirstack,
			\fhistory,
			\phistory,
			\registers,
			\savedirs,
			\shistory,
			\state,
			\tui

